    name = "PHP-Smarty"; 
    scopeName = "source.smarty";
    fileTypes = (); 
    foldingStartMarker = "(<(?i:(head|table|tr|div|style|script|ul|ol|form|dl))\\b.*?>|\\{\\{?(if|foreach|capture|literal|foreach|php|section|strip)|\\{\\s*$)";
    foldingStopMarker = "(</(?i:(head|table|tr|div|style|script|ul|ol|form|dl))>|\\{\\{?/(if|foreach|capture|literal|foreach|php|section|strip)|(^|\\s)\\})";
    patterns = (
        {   name = "comment.smarty"; 
            begin = "\\*"; 
            end = "\\*";
        }, 
        {   name = "keyword.control.smarty"; 
            match = "\\b(if|else|elseif|foreach|foreachelse|section)\\b"; 
        }, 
        {   name = "support.function.built-in.smarty"; 
            match = "\\b(capture|config_load|counter|cycle|debug|eval|fetch|include|include_php|insert|literal|math|strip|rdelim|ldelim|assign|html_[a-z_]*)\\b"; 
        }, 
        {   name = "keyword.operator.smarty"; 
            match = "\\b(and|or)\\b"; 
        }, 
        {   name = "keyword.operator.other.smarty"; 
            match = "\\b(eq|neq|gt|lt|gte|lte|is|not|even|odd|not|mod|div|by)\\b";            
        }, 
        {   name = "support.function.variable-modifier.smarty"; 
            /* Variable Mods */
            match = "\\|(capitalize|cat|count_characters|count_paragraphs|count_sentences|count_words|date_format|default|escape|indent|lower|nl2br|regex_replace|replace|spacify|string_format|strip|strip_tags|truncate|upper|wordwrap)";             
        }, 
        {   name = "declaration.attribute.smarty";
            match = "\\b[a-zA-Z]*="; 
        }, 
        {   name = "string.single-quoted.smarty"; 
            begin = "'"; 
            end = "'"; 
            swallow = "\\\\."; 
        }, 
        {   name = "string.double-quoted.smarty"; 
            begin = "\""; 
            end = "\"";             
            swallow = "\\\\."; 
        }, 
        {   name = "variable.global.smarty"; 
            match = "\\b\\$Smarty\\."; 
        }, 
        {   name = "variable.smarty";
            match = "\\$[a-zA-Z_\\x{7f}-\\x{ff}][a-zA-Z0-9_\\x{7f}-\\x{ff}]*?\\b";
            /* 
            match = "\\$[a-zA-Z_x7f-xff][a-zA-Z0-9_x7f-xff]*?(\\b|\\.)"; 
            */
        }, 
        {   name = "constant.language.smarty"; 
            match = "\\b(TRUE|FALSE|true|false)\\b";
            
        }
    ); 
